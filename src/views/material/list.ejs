<%- include('../layout', { 
    title: 'Materials',
    body: `
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-file-earmark"></i> Materials</h1>
        <a href="/material/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Upload Material
        </a>
    </div>
    <div class="row">
        ${materials.length === 0 ? `
        <div class="col-12">
            <div class="alert alert-info">No materials found.</div>
        </div>
        ` : materials.map(material => `
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">${material.title}</h5>
                    <p class="card-text text-muted">${material.description || 'No description'}</p>
                    <p class="card-text">
                        <small class="text-muted">
                            Type: ${material.fileType}<br>
                            Uploaded: ${new Date(material.createdAt).toLocaleDateString()}
                        </small>
                    </p>
                    <a href="/material/${material._id}" class="btn btn-primary btn-sm">View</a>
                </div>
            </div>
        </div>
        `).join('')}
    </div>
</div>
` }) %>

