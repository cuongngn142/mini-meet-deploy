<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= classRoom.name %> - miniMeet</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <% if (typeof user !=='undefined' && user) { %> <%-
    include('../partials/navbar') %> <% } %>

    <main class="container-fluid py-4">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div>
            <h1><%= classRoom.name %></h1>
            <p class="text-muted">
              Code: <strong> <%= classRoom.code %> </strong>
            </p>
          </div>
          <div>
            <a
              href="/meeting/create?classId=<%= classRoom._id %>"
              class="btn btn-primary"
            >
              <i class="bi bi-camera-video"></i> Start Meeting
            </a>
          </div>
        </div>

        <ul class="nav nav-tabs mb-4">
          <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#meetings"
              >Meetings</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#materials"
              >Materials</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#homework"
              >Homework</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#quizzes">Quizzes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#students"
              >Students</a
            >
          </li>
        </ul>

        <div class="tab-content">
          <!-- MEETINGS TAB -->
          <div class="tab-pane fade show active" id="meetings">
            <div class="d-flex justify-content-between mb-3">
              <h4>Meetings</h4>
            </div>

            <% if (!classRoom.meetings || classRoom.meetings.length===0) { %>
            <p class="text-muted">
              No meetings yet. Start a meeting to see it here.
            </p>
            <% } else { %>
            <div class="list-group">
              <% classRoom.meetings.forEach(m=> { %>
              <div class="list-group-item">
                <div
                  class="d-flex w-100 justify-content-between align-items-center"
                >
                  <div>
                    <h5 class="mb-1">
                      <%= m.title %> <% const isActive=m.isActive && !m.endedAt;
                      %>
                      <span
                        class="badge <%= isActive ? 'bg-success' : 'bg-secondary' %>"
                      >
                        <%= isActive ? 'Active' : 'Ended' %>
                      </span>
                    </h5>
                    <p class="mb-1 text-muted"><%= m.description || '' %></p>
                    <small
                      >Started: <%= new Date(m.startedAt).toLocaleString()
                      %></small
                    ><br />
                    <% if (isTeacher) { %>
                    <small>Code: <strong> <%= m.meetingCode %> </strong></small>
                    <% } %>
                  </div>

                  <div>
                    <% if (isActive) { %>
                    <a
                      href="/meeting/<%= m._id %>"
                      class="btn btn-sm btn-primary"
                      >Join Meeting</a
                    >
                    <% } %>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
            <% } %>
          </div>

          <!-- MATERIALS TAB -->
          <div class="tab-pane fade" id="materials">
            <div class="d-flex justify-content-between mb-3">
              <h4>Materials</h4>
              <% if (isTeacher) { %>
              <a
                href="/material/create?classId=<%= classRoom._id %>"
                class="btn btn-sm btn-primary"
                >Upload Material</a
              >
              <% } %>
            </div>

            <% if (classRoom.materials && classRoom.materials.length> 0) { %>
            <div class="list-group">
              <% classRoom.materials.forEach(m=> { %>
              <a
                href="/material/<%= m._id %>"
                class="list-group-item list-group-item-action"
              >
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1"><%= m.title || 'Untitled' %></h5>
                  <small>
                    <%= new Date(m.createdAt).toLocaleDateString() %>
                  </small>
                </div>
              </a>
              <% }) %>
            </div>
            <% } else { %>
            <p class="text-muted">No materials yet.</p>
            <% } %>
          </div>

          <!-- HOMEWORK TAB -->
          <div class="tab-pane fade" id="homework">
            <div class="d-flex justify-content-between mb-3">
              <h4>Homework</h4>
              <% if (isTeacher) { %>
              <a
                href="/homework/create?classId=<%= classRoom._id %>"
                class="btn btn-sm btn-primary"
                >Create Homework</a
              >
              <% } %>
            </div>

            <% if (classRoom.homeworks && classRoom.homeworks.length> 0) { %>
            <div class="list-group">
              <% classRoom.homeworks.forEach(h=> { %>
              <a
                href="/homework/<%= h._id %>"
                class="list-group-item list-group-item-action"
              >
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1"><%= h.title || 'Untitled' %></h5>
                  <small
                    >Due: <%= new Date(h.dueDate).toLocaleDateString() %></small
                  >
                </div>
              </a>
              <% }) %>
            </div>
            <% } else { %>
            <p class="text-muted">No homework assignments yet.</p>
            <% } %>
          </div>

          <!-- QUIZZES TAB -->
          <div class="tab-pane fade" id="quizzes">
            <div class="d-flex justify-content-between mb-3">
              <h4>Quizzes</h4>
              <% if (isTeacher) { %>
              <a
                href="/quiz/create?classId=<%= classRoom._id %>"
                class="btn btn-sm btn-primary"
                >Create Quiz</a
              >
              <% } %>
            </div>

            <% if (classRoom.quizzes && classRoom.quizzes.length> 0) { %>
            <div class="list-group">
              <% classRoom.quizzes.forEach(q=> { %>
              <a
                href="/quiz/<%= q._id %>"
                class="list-group-item list-group-item-action"
              >
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1"><%= q.title || 'Untitled' %></h5>
                  <small>
                    <%= q.questions ? q.questions.length : 0 %> questions
                  </small>
                </div>
              </a>
              <% }) %>
            </div>
            <% } else { %>
            <p class="text-muted">No quizzes yet.</p>
            <% } %>
          </div>

          <!-- STUDENTS TAB -->
          <div class="tab-pane fade" id="students">
            <h4>
              Students (<%= classRoom.students ? classRoom.students.length : 0
              %>)
            </h4>

            <% if (classRoom.students && classRoom.students.length> 0) { %>
            <div class="list-group">
              <% classRoom.students.forEach(s=> { %>
              <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between">
                  <div>
                    <h5 class="mb-1"><%= s.name %></h5>
                    <small> <%= s.email %> </small>
                  </div>

                  <% if (isTeacher) { %>
                  <button
                    class="btn btn-sm btn-danger"
                    onclick="removeStudent('<%= s._id %>')"
                  >
                    Remove
                  </button>
                  <% } %>
                </div>
              </div>
              <% }) %>
            </div>
            <% } else { %>
            <p class="text-muted">No students yet.</p>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <% if (typeof user !=='undefined' && user) { %> <%-
    include('../partials/footer') %> <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function removeStudent(studentId) {
        if (confirm("Remove this student from the class?")) {
          fetch("/classroom/<%= classRoom._id %>/remove-student", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ studentId }),
          }).then(() => location.reload());
        }
      }
    </script>
  </body>
</html>
