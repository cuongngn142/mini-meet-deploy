<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meetings - miniMeet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <% if (typeof user !== 'undefined' && user) { %>
        <%- include('../partials/navbar') %>
    <% } %>
    
    <main class="container-fluid py-4">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-camera-video"></i> My Meetings</h1>
                <a href="/meeting/create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> New Meeting
                </a>
            </div>
            <div class="row">
                <% if (meetings.length === 0) { %>
                <div class="col-12">
                    <div class="alert alert-info">No meetings found. Create your first meeting!</div>
                </div>
                <% } else { %>
                    <% meetings.forEach(function(meeting) { %>
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= meeting.title %></h5>
                                <p class="card-text text-muted"><%= meeting.description || 'No description' %></p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        Code: <strong><%= meeting.meetingCode %></strong><br>
                                        Host: <%= meeting.host.name %>
                                    </small>
                                </p>
                                <a href="/meeting/<%= meeting._id %>" class="btn btn-primary btn-sm">Join Meeting</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </main>

    <% if (typeof user !== 'undefined' && user) { %>
        <%- include('../partials/footer') %>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

