<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= meeting.title %> - miniMeet</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css"
      integrity="sha512-dPXYcDub/aeb08c63jRq/k6GaKccl256JQy/AnOq7CAnEZ9FzSL9wSbcZkMp4R26vBsMLFYH4kQ67/bbV8XaCQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/meeting.css" />
  </head>

  <body>
    <!-- Approval Request Modal (for host/co-host) -->
    <div
      class="modal fade"
      id="approvalModal"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-warning text-dark">
            <h5 class="modal-title">
              <i class="bi bi-person-raised-hand"></i> Join Request
            </h5>
          </div>
          <div class="modal-body text-center">
            <div class="mb-3">
              <div
                class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center"
                style="width: 80px; height: 80px; font-size: 2.5rem"
              >
                <span id="approval-user-initial">?</span>
              </div>
            </div>
            <h4 id="approval-user-name">Someone</h4>
            <p class="text-muted">wants to join this meeting</p>
            <small class="text-muted" id="approval-user-email"></small>
          </div>
          <div class="modal-footer justify-content-center">
            <button
              type="button"
              class="btn btn-danger btn-lg px-4"
              id="deny-join-btn"
            >
              <i class="bi bi-x-circle"></i> Deny
            </button>
            <button
              type="button"
              class="btn btn-success btn-lg px-4"
              id="approve-join-btn"
            >
              <i class="bi bi-check-circle"></i> Approve
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Preview Modal (shown before joining) -->
    <div
      class="modal fade"
      id="previewModal"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
    >
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-dark text-white">
          <div class="modal-header border-secondary">
            <h5 class="modal-title">Ready to join?</h5>
          </div>
          <div class="modal-body text-center">
            <div
              class="position-relative d-inline-block"
              style="width: 640px; max-width: 100%"
            >
              <video
                id="preview-video"
                autoplay
                muted
                playsinline
                class="w-100 rounded bg-black"
                style="max-height: 480px"
              ></video>
              <div
                id="preview-off-message"
                class="position-absolute top-50 start-50 translate-middle text-white d-none"
              ></div>
            </div>
            <div class="mt-4 d-flex justify-content-center gap-3">
              <button
                class="btn btn-lg btn-outline-light rounded-circle"
                id="preview-toggle-camera"
                style="width: 60px; height: 60px"
              >
                <i class="bi bi-camera-video" id="preview-camera-icon"></i>
              </button>
              <button
                class="btn btn-lg btn-outline-light rounded-circle"
                id="preview-toggle-mic"
                style="width: 60px; height: 60px"
              >
                <i class="bi bi-mic" id="preview-mic-icon"></i>
              </button>
            </div>
            <p class="mt-3 text-muted">
              <i class="bi bi-info-circle"></i> You can change these settings
              anytime during the meeting
            </p>
          </div>
          <div class="modal-footer border-secondary justify-content-center">
            <button
              type="button"
              class="btn btn-primary btn-lg px-5"
              id="join-meeting-btn"
            >
              <i class="bi bi-box-arrow-in-right"></i> Join now
            </button>
          </div>
        </div>
      </div>
    </div>

    <div
      id="meeting-container"
      class="d-flex flex-column vh-100"
      style="display: none !important"
    >
      <!-- Top Bar -->
      <div class="bg-dark text-white p-2">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="mb-0"><%= meeting.title %></h5>
            <small>Code: <%= meeting.meetingCode %></small>
          </div>
          <div class="d-flex align-items-center">
            <!-- Layout selector (manual override) -->
            <select
              id="layout-select"
              class="form-select form-select-sm me-2"
              style="width: 150px"
            >
              <option value="auto" selected>Auto</option>
              <option value="tiled">Grid</option>
              <option value="spotlight">Spotlight</option>
              <option value="sidebar">Sidebar</option>
            </select>

            <button class="btn btn-sm btn-outline-light me-2" id="toggle-chat">
              <i class="bi bi-chat"></i> Chat
            </button>
            <button
              class="btn btn-sm btn-outline-light me-2"
              id="toggle-participants"
            >
              <i class="bi bi-people"></i> Participants
            </button>
            <% if (isHost || isCoHost) { %>
            <button
              class="btn btn-sm btn-outline-light me-2"
              id="toggle-settings"
            >
              <i class="bi bi-gear"></i> Settings
            </button>
            <% } %>
            <a href="/meeting" class="btn btn-sm btn-danger">
              <i class="bi bi-box-arrow-right"></i> Leave
            </a>
          </div>
        </div>
        <div
          id="meeting-alert"
          class="alert alert-warning text-dark mb-0 py-1 px-2 d-none mt-2"
        ></div>
      </div>

      <!-- Main Content -->
      <div class="flex-grow-1 d-flex" style="min-height: 0; overflow: hidden">
        <!-- Video Grid -->
        <div
          id="video-container"
          class="flex-grow-1 p-2 bg-dark"
          style="min-height: 0"
        >
          <div id="video-grid" class="video-grid-google-meet">
            <!-- Videos will be added here dynamically -->
          </div>

          <div id="whiteboard-overlay" class="whiteboard-overlay">
            <div class="whiteboard-toolbar text-white w-100">
              <strong class="me-2"
                ><i class="bi bi-pencil-square"></i> Whiteboard</strong
              >
              <% if (isHost || isCoHost) { %>
              <div
                class="btn-group me-2"
                role="group"
                aria-label="Whiteboard tools"
              >
                <button
                  type="button"
                  id="whiteboard-tool-pen"
                  class="btn btn-sm btn-light btn-tool active"
                  data-tool="pen"
                >
                  <i class="bi bi-pencil"></i> Pen
                </button>
                <button
                  type="button"
                  id="whiteboard-tool-eraser"
                  class="btn btn-sm btn-light btn-tool"
                  data-tool="eraser"
                >
                  <i class="bi bi-eraser"></i> Eraser
                </button>
              </div>
              <label class="me-2"
                >Color
                <input
                  type="color"
                  id="whiteboard-color"
                  value="#ff4757"
                  class="ms-1"
                />
              </label>
              <label class="me-2"
                >Size
                <select id="whiteboard-size" class="ms-1">
                  <option value="2">Thin</option>
                  <option value="4" selected>Normal</option>
                  <option value="8">Thick</option>
                </select>
              </label>
              <button
                type="button"
                id="whiteboard-clear"
                class="btn btn-sm btn-danger"
              >
                <i class="bi bi-eraser"></i> Clear
              </button>
              <button
                type="button"
                id="whiteboard-hide"
                class="btn btn-sm btn-secondary ms-auto"
              >
                <i class="bi bi-x"></i> Hide
              </button>
              <% } else { %>
              <span class="ms-3 text-muted">Host is sharing a whiteboard</span>
              <% } %>
            </div>
            <canvas id="whiteboard-canvas"></canvas>
          </div>
        </div>

        <!-- Sidebar -->
        <div
          id="sidebar"
          class="bg-light border-start"
          style="width: 350px; display: none"
        >
          <!-- Chat Panel -->
          <div id="chat-panel" class="d-flex flex-column h-100">
            <div class="p-3 border-bottom">
              <h5><i class="bi bi-chat"></i> Chat</h5>
            </div>
            <div
              id="chat-messages"
              class="flex-grow-1 p-3 overflow-auto"
              style="max-height: 400px"
            >
              <!-- Messages will appear here -->
            </div>
            <div class="p-3 border-top">
              <div class="input-group">
                <input
                  type="text"
                  id="chat-input"
                  class="form-control"
                  placeholder="Type a message..."
                />
                <button class="btn btn-primary" id="send-chat">
                  <i class="bi bi-send"></i>
                </button>
              </div>
            </div>
          </div>

          <!-- Participants Panel -->
          <div id="participants-panel" class="d-none d-flex flex-column h-100">
            <div class="p-3 border-bottom">
              <h5><i class="bi bi-people"></i> Participants</h5>
            </div>

            <!-- Pending Participants Section (Only visible to host/co-host) -->
            <div id="pending-participants-section" class="d-none border-bottom">
              <div class="px-3 py-2 bg-light">
                <h6 class="mb-0 text-warning">
                  <i class="bi bi-hourglass-split"></i> Waiting for Approval
                  (<span id="pending-count">0</span>)
                </h6>
              </div>
              <div id="pending-participants-list" class="p-2">
                <!-- Pending participants will appear here -->
              </div>
            </div>

            <div id="participants-list" class="flex-grow-1 p-3 overflow-auto">
              <!-- Participants will appear here -->
            </div>
          </div>

          <!-- Q&A Panel -->
          <div id="qa-panel" class="d-none d-flex flex-column h-100">
            <div
              class="p-3 border-bottom d-flex justify-content-between align-items-center"
            >
              <h5 class="mb-0"><i class="bi bi-question-circle"></i> Q&A</h5>
              <button
                class="btn btn-sm btn-outline-secondary"
                id="close-qa-panel"
              >
                <i class="bi bi-x"></i>
              </button>
            </div>
            <div id="qa-content" class="flex-grow-1 p-3 overflow-auto">
              <!-- Q&A content -->
            </div>
          </div>

          <!-- Caption Panel -->
          <div id="caption-panel" class="d-none d-flex flex-column h-100">
            <div
              class="p-3 border-bottom d-flex justify-content-between align-items-center"
            >
              <h5 class="mb-0"><i class="bi bi-badge-cc"></i> Live Caption</h5>
              <button
                class="btn btn-sm btn-outline-secondary"
                id="close-caption-panel"
              >
                <i class="bi bi-x"></i>
              </button>
            </div>

            <!-- Alert -->
            <div
              id="caption-alert"
              class="alert alert-info mx-3 mt-2 py-2 d-none"
              style="font-size: 0.85rem"
            ></div>

            <!-- Language selector -->
            <div class="px-3 pt-2 pb-3 border-bottom">
              <small class="text-muted d-block mb-2">Speech Recognition:</small>
              <div class="btn-group btn-group-sm w-100" role="group">
                <button
                  type="button"
                  class="btn btn-outline-primary caption-lang-option active"
                  data-lang="vi-VN"
                >
                  Tiếng Việt
                </button>
                <button
                  type="button"
                  class="btn btn-outline-primary caption-lang-option"
                  data-lang="en-US"
                >
                  English
                </button>
              </div>
            </div>

            <!-- Translation settings -->
            <div class="px-3 pt-2 pb-3 border-bottom">
              <div class="form-check form-switch mb-2">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="enable-translation"
                />
                <label class="form-check-label" for="enable-translation">
                  <small>Enable Auto Translation</small>
                </label>
              </div>
              <div id="translation-lang-group" class="d-none">
                <small class="text-muted d-block mb-2">Translate to:</small>
                <select
                  class="form-select form-select-sm"
                  id="translation-target-lang"
                >
                  <option value="vi">Tiếng Việt</option>
                  <option value="en">English</option>
                  <option value="zh-CN">中文 (Chinese)</option>
                  <option value="ja">日本語 (Japanese)</option>
                  <option value="ko">한국어 (Korean)</option>
                  <option value="fr">Français (French)</option>
                  <option value="de">Deutsch (German)</option>
                  <option value="es">Español (Spanish)</option>
                </select>
              </div>
            </div>

            <!-- Live caption (interim results) -->
            <div class="px-3 py-2 border-bottom bg-light">
              <small class="text-muted d-block mb-1">Live:</small>
              <div
                id="live-caption-text"
                class="fw-bold text-primary"
                style="min-height: 24px; font-size: 0.95rem"
              ></div>
            </div>

            <!-- Caption history -->
            <div class="flex-grow-1 overflow-auto" style="max-height: 400px">
              <div id="caption-history" class="p-3">
                <p class="text-muted text-center mt-3">Chưa có phụ đề</p>
              </div>
            </div>

            <!-- Actions -->
            <div class="p-3 border-top">
              <div class="d-flex gap-2">
                <button
                  class="btn btn-sm btn-outline-secondary flex-fill"
                  id="clear-caption-history"
                >
                  <i class="bi bi-trash"></i> Clear
                </button>
                <button
                  class="btn btn-sm btn-outline-primary flex-fill"
                  id="export-caption-history"
                >
                  <i class="bi bi-download"></i> Export
                </button>
              </div>
            </div>
          </div>

          <!-- Virtual Background Panel -->
          <div id="background-panel" class="d-none d-flex flex-column h-100">
            <div
              class="p-3 border-bottom d-flex justify-content-between align-items-center"
            >
              <h5 class="mb-0">
                <i class="bi bi-image"></i> Virtual Background
              </h5>
              <button
                class="btn btn-sm btn-outline-secondary"
                id="close-background-panel"
              >
                <i class="bi bi-x"></i>
              </button>
            </div>

            <!-- Alert -->
            <div
              id="background-alert"
              class="alert alert-info mx-3 mt-2 py-2 d-none"
              style="font-size: 0.85rem"
            ></div>

            <!-- Background modes -->
            <div class="px-3 pt-3 pb-2">
              <small class="text-muted d-block mb-2">Effect:</small>
              <div class="btn-group btn-group-sm w-100" role="group">
                <button
                  type="button"
                  class="btn btn-outline-primary active"
                  id="bg-none"
                >
                  None
                </button>
                <button
                  type="button"
                  class="btn btn-outline-primary"
                  id="bg-blur"
                >
                  <i class="bi bi-droplet"></i> Blur
                </button>
              </div>
            </div>

            <!-- Background images -->
            <div class="px-3 pt-2">
              <small class="text-muted d-block mb-2">Background Images:</small>
              <div class="row g-2">
                <div class="col-4">
                  <div
                    class="bg-image-option border rounded p-1"
                    data-bg-url="https://images.unsplash.com/photo-1557683316-973673baf926?w=1920&h=1080&fit=crop"
                    style="
                      cursor: pointer;
                      aspect-ratio: 16/9;
                      background: url('https://images.unsplash.com/photo-1557683316-973673baf926?w=400&h=225&fit=crop')
                        center/cover;
                    "
                  ></div>
                </div>
                <div class="col-4">
                  <div
                    class="bg-image-option border rounded p-1"
                    data-bg-url="https://images.unsplash.com/photo-1579546929518-9e396f3cc809?w=1920&h=1080&fit=crop"
                    style="
                      cursor: pointer;
                      aspect-ratio: 16/9;
                      background: url('https://images.unsplash.com/photo-1579546929518-9e396f3cc809?w=400&h=225&fit=crop')
                        center/cover;
                    "
                  ></div>
                </div>
                <div class="col-4">
                  <div
                    class="bg-image-option border rounded p-1"
                    data-bg-url="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1920&h=1080&fit=crop"
                    style="
                      cursor: pointer;
                      aspect-ratio: 16/9;
                      background: url('https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=400&h=225&fit=crop')
                        center/cover;
                    "
                  ></div>
                </div>
                <div class="col-4">
                  <div
                    class="bg-image-option border rounded p-1"
                    data-bg-url="https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=1920&h=1080&fit=crop"
                    style="
                      cursor: pointer;
                      aspect-ratio: 16/9;
                      background: url('https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=400&h=225&fit=crop')
                        center/cover;
                    "
                  ></div>
                </div>
                <div class="col-4">
                  <div
                    class="bg-image-option border rounded p-1"
                    data-bg-url="https://images.unsplash.com/photo-1519681393784-d120267933ba?w=1920&h=1080&fit=crop"
                    style="
                      cursor: pointer;
                      aspect-ratio: 16/9;
                      background: url('https://images.unsplash.com/photo-1519681393784-d120267933ba?w=400&h=225&fit=crop')
                        center/cover;
                    "
                  ></div>
                </div>
                <div class="col-4">
                  <div
                    class="bg-image-option border rounded p-1"
                    data-bg-url="https://images.unsplash.com/photo-1470071459604-3b5ec3a7fe05?w=1920&h=1080&fit=crop"
                    style="
                      cursor: pointer;
                      aspect-ratio: 16/9;
                      background: url('https://images.unsplash.com/photo-1470071459604-3b5ec3a7fe05?w=400&h=225&fit=crop')
                        center/cover;
                    "
                  ></div>
                </div>
              </div>
            </div>

            <!-- Info -->
            <div class="px-3 pt-3">
              <div class="alert alert-warning py-2" style="font-size: 0.85rem">
                <i class="bi bi-info-circle"></i> Virtual background uses AI to
                detect your body. Works best with good lighting and a clear
                background.
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Controls Bar -->
      <div
        class="bg-dark text-white p-3 d-flex justify-content-center align-items-center gap-3"
      >
        <button class="btn btn-sm btn-secondary" id="toggle-mic">
          <i class="bi bi-mic"></i>
        </button>
        <button class="btn btn-sm btn-secondary" id="toggle-camera">
          <i class="bi bi-camera-video"></i>
        </button>
        <button class="btn btn-sm btn-secondary" id="toggle-screen-share">
          <i class="bi bi-display"></i>
        </button>
        <% if (isHost || isCoHost) { %>
        <button class="btn btn-sm btn-secondary" id="toggle-whiteboard">
          <i class="bi bi-pencil-square"></i>
        </button>
        <% } %>
        <button
          class="btn btn-sm btn-secondary"
          id="raise-hand"
          title="Raise Hand"
        >
          <i class="bi bi-hand-thumbs-up"></i>
        </button>
        <button class="btn btn-sm btn-secondary" id="show-reactions">
          <i class="bi bi-emoji-smile"></i>
        </button>
        <button class="btn btn-sm btn-secondary" id="show-polls">
          <i class="bi bi-bar-chart"></i> Polls
        </button>
        <button class="btn btn-sm btn-secondary" id="show-qa">
          <i class="bi bi-question-circle"></i> Q&A
        </button>
        <button
          class="btn btn-sm btn-secondary"
          id="toggle-caption"
          title="Live Caption"
        >
          <i class="bi bi-badge-cc"></i>
        </button>
        <button
          class="btn btn-sm btn-secondary"
          id="toggle-background"
          title="Virtual Background"
        >
          <i class="bi bi-image"></i>
        </button>
        <% if (isHost) { %>
        <button class="btn btn-sm btn-danger" id="end-meeting">
          <i class="bi bi-x-circle"></i> End Meeting
        </button>
        <% } %>
      </div>
    </div>

    <!-- libs -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <!-- TensorFlow.js and BodyPix for virtual background -->
    <script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs@3.11.0/dist/tf.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@tensorflow-models/body-pix@2.2.0/dist/body-pix.min.js"></script>

    <script>
      const meetingId = '<%= meeting._id %>';
      const userId = '<%= user._id %>';
      const userName = '<%= user.name || "You" %>';
      const isHost = <%= isHost %>;
      const isCoHost = <%= isCoHost %>;
    </script>

    <!-- layout manager + app scripts -->
    <script src="/js/videoLayoutManager.js"></script>

    <!-- keep other app scripts (webrtc, meeting logic) loaded after) -->
    <script src="/js/meeting.js"></script>
    <script src="/js/participants.js"></script>
    <script src="/js/webrtc.js"></script>
    <script src="/js/polls.js"></script>
    <script src="/js/qa.js"></script>
    <script src="/js/captions.js"></script>
    <script src="/js/virtualBackground.js"></script>
  </body>
</html>
